generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @default(autoincrement()) @id
  email     String   @unique
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  bookings  Booking[]
  reviews   Review[]
}

model Room {
  id           Int      @default(autoincrement()) @id
  roomNumber   Int
  type         String
  pricePerNight Float
  hotelId      Int
  hotel        Hotel    @relation(fields: [hotelId], references: [id])
  bookings     Booking[]
}

model Booking {
  id          Int      @default(autoincrement()) @id
  roomId      Int
  room        Room     @relation(fields: [roomId], references: [id])
  userId      Int
  user        User     @relation(fields: [userId], references: [id])
  checkInDate DateTime
  checkOutDate DateTime
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Review {
  id          Int      @default(autoincrement()) @id
  hotelRating Int
  hotelReview String
  hotelId     Int
  hotel       Hotel    @relation(fields: [hotelId], references: [id])
  userId      Int
  user        User     @relation(fields: [userId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Hotel {
  id        Int      @default(autoincrement()) @id
  name      String
  location  String
  rooms     Room[]
  reviews   Review[]
}
